        android:id="@+id/btn0"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="appinfodemo"
        android:elevation="6dp"
        android:translationZ="6dp"
        android:background="@drawable/myrect"
        android:id="@+id/btn1"
